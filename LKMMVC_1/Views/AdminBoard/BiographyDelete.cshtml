@model LKMMVC_1.Models.ManagementBiography

@{
    ViewBag.Title = "Biografijos ištrynimas";
}

<h2>Biografijos ištrynimas</h2>

<h3>Ar Jūs tikrai norite ištrinti <b>"@Model.ManagementPersonName"</b> biografiją?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ManagementPersonName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ManagementPersonName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Ištrinti" class="btn btn-default" /> |
            @Html.ActionLink("Grįžti į sąrašą", "Biographies")
        </div>
    }
</div>
